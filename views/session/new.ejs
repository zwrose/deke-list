<div class="ccontainer">
  <% if(flash && flash.err) { %>
  <div class="error card four columns offset-by-four">
    <% Object.keys(flash.err).forEach(function(error) { %>
    <div><%- flash.err[error].message %></div>
    <% }) %>
  </div>
  <% } %>
  <div class="card four columns offset-by-four">
    <form action="/session/create" method="POST" id="sign-up-form" >
      <h3 class="form-heading">Please Log In:</h3>
      <input type="text" class="u-full-width" placeholder="email address" name="email">
      <input type="password" class="u-full-width" placeholder="password" name="password" id="password">
      <input type="submit" value="Log In"/>
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      <h6 style="margin-bottom: 0">Not registered yet? <a href="/signup">Create an account here.</a></h6>
    </form>
  </div>
</div>