<div class="container form-wide index-header-out">
  <div class="jumbotron index-header-in">
    <h1 class="text-center white-shadow">In the (digital) bonds.</h1>
    <h4 class="text-center white-shadow">Welcome to astadke.org, the online home of the Association of Sigma Tau Alumni of Delta Kappa Epsilon.</h4> 
      <h4 class="text-center white-shadow">See what's happening at the house, keep in touch with ASTADKE and other alumni, show your support, and more.</h4>
      <h4 class="text-center white-shadow">Check out the blog below for the latest news, or explore the site from the menu above!</h4>
  </div>
</div>
<div id="articles" class="container form-wide">
  <div class="row">
    <div class="col-sm-9">
      <% _.each(articles, function(article) { %>
        <% if(article.published){ %>
          <div class="">
            <h3 ><a href="/blog/show/<%= article.id %>"><%= article.title %></a></h3>
          </div>
          <div class="">
            <h5>By: <%= article.author.firstName %>, Published on <%= article.pubDate %></h5>
          </div>
          <div class="">
            <div><%- article.articleBody %></div>
          </div>
          <% if(articles.indexOf(article) !== (articles.length - 1)){ %>
            <hr />
          <% } %>
        <% } %>
      <% }) %>
    </div>
    <div class="col-sm-3 sidebar">
      sidebar  
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
      <hr />
    </div>
  </div>
</div>