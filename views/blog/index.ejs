<div class="ccontainer">
  <div class="centered splash">
    <h1 style="font-weight:bold">In the (digital) bonds.</h1>
    <h4>Welcome to astadke.org: <br>the online home of the Association of Sigma Tau Alumni of Delta Kappa Epsilon.</h4> 
    <h4>See what's happening at the house, keep in touch with ASTADKE and other alumni,<br>show your support, and more.</h4>
    <h4>Check out the blog below for the latest news, or explore the site from the menu above!</h4>
  </div>

  <div id="articles">
        <% if(flash && flash.err) { %>
          <div class="alert alert-danger">
        <% Object.keys(flash.err).forEach(function(error) { %>
          <div><%- flash.err[error].message %></div>
        <% }) %>
        </div>
        <% } %>
        <% _.each(articles, function(article) { %>
          <% if(article.published){ %>
            <div class="card">
            <h3 class="article-title"><a href="/blog/show/<%= article.id %>"><%= article.title %></a></h3>
            <h6 class="article-byline">Posted by <%= article.author.firstName %>, on <%= article.pubDate %></h6>
            <hr class="article-break" />
            <div class="article-body"><%- article.articleBody %></div>
            <a class="goto-comments" href="/blog/show/<%= article.id %>#comments">Leave a comment on the article page &rarr;</a>
<!--             <% if(articles.indexOf(article) !== (articles.length - 1)){ %>
              <hr class="article-end" />
            <% } %> -->
            </div>
          <% } %>
        <% }) %>
      </div>
      <div class="card">
        <div class="row">
          <div class="three columns centered">
            <a class="button centered<% if(lastPage) { %> hide<% } %>" <% if(!req.param('id') || req.param('id') < 2) { %>href="/blog/index/2"<% } else { %>href="/blog/index/<%= req.param('id') + 1 %>"<% } %>>&larr; Older Articles</a>
          </div>
          <div class="six columns centered">
            Have a memorable story or piece of Alumni News you wish to share?<br>Send an email to <a href="mailto:alumni_relations@astadke.org" target="_blank">alumni_relations@astadke.org</a>!
          </div>
          <div class="three columns centered">
            <a class="button centered<% if(!req.param('id') || req.param('id') < 2) { %> hide<% } %>" <% if(req.param('id') && req.param('id') <= 2) { %>href="/blog"<% } else { %>href="/blog/index/<%= req.param('id') - 1 %>"<% } %>>Newer Articles &rarr;</a>
          </div>
        </div>
      </div>
</div>
